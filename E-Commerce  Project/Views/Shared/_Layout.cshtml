<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Géraud</title>

    <!-- Fuente elegante desde Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700&display=swap" rel="stylesheet">

    <!-- Bootstrap 5 CSS desde CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" 
          rel="stylesheet" 
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" 
          crossorigin="anonymous">

    <!-- Estilos propios -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/E_Commerce__Project.styles.css" asp-append-version="true" />

    <style>
        body {
            font-family: 'Playfair Display', serif;
            background-color: #0d0d0d; /* negro elegante */
            color: #f5f5f5; /* texto claro */
        }

        .navbar {
            background-color: #000 !important;
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.6rem;
            letter-spacing: 2px;
            color: #f5f5f5 !important;
        }

        .nav-link {
            color: #f5f5f5 !important;
            transition: 0.3s;
        }

        .nav-link:hover {
            color: #ffc107 !important; /* dorado elegante */
        }

        footer {
            border-top: 1px solid #222;
            background-color: #000;
        }

        footer span {
            color: #aaa;
        }

        footer span strong {
            color: #ffc107; /* Géraud en dorado */
        }
    </style>
</head>
<body>
    <header>
    <nav class="navbar navbar-expand-sm navbar-dark shadow-sm">
        <div class="container-fluid">
            <!-- Logo -->
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <span class="text-warning">Géraud</span>
            </a>

            <!-- Toggle responsive -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" 
                    data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Links + carrito -->
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end align-items-center">
                <ul class="navbar-nav me-3">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Products" asp-action="Index">Colección</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Nosotros</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Contact" asp-action="Index">Contacto</a>
                    </li>
                </ul>

                <!-- Carrito -->
                <a href="@Url.Action("Index","Cart")" class="btn btn-outline-warning position-relative p-2" style="border-radius: 50%;">
                    <img src="~/images/cart.png" alt="Carrito" width="24" height="24">
                    <!-- Badge de cantidad -->
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                        0
                    </span>
                </a>
            </div>
        </div>
    </nav>
</header>


    <!-- Renderizado de páginas -->
    <main role="main">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer py-4 mt-5">
        <div class="container text-center">
            <span>&copy; 2025 - <strong>Géraud</strong> | Tous droits réservés</span>
        </div>
    </footer>

    <!-- Bootstrap 5 JS desde CDN (incluye Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" 
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" 
            crossorigin="anonymous"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
